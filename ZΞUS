    <input type="email" id="email" placeholder="أدخل بريدك الإلكتروني">
    <input type="password" id="password" placeholder="أدخل كلمة السر (محلية فقط)">
    <button class="btn" onclick="showData()">عرض المدخلات</button>
</div>

<div class="box">
    <h3 style="text-align:center">إرسال رسالة إلى بوت تليغرام</h3>

    <input type="text" id="msg" placeholder="اكتب رسالة عادية">
    <button class="btn" onclick="sendToTelegram()">إرسال</button>
</div>

<script>
function showData() {
    const email = document.getElementById("email").value;
    const pass  = document.getElementById("password").value;

    alert("Email: " + email + "\nPassword: " + pass);
}

async function sendToTelegram() {
    const botToken = "YOUR_BOT_TOKEN"; 
    const chatId   = "YOUR_CHAT_ID";
    const textMsg  = document.getElementById("msg").value;

    if (!textMsg.trim()) {
        alert("أدخل رسالة!");
        return;
    }

    const url = `https://api.telegram.org/bot${botToken}/sendMessage`;

    await fetch(url, {
        method: "POST",
        headers: {"Content-Type": "application/json"},
        body: JSON.stringify({ chat_id: chatId, text: textMsg })
    });

    alert("تم إرسال الرسالة إلى تليغرام!");
}
</script>

